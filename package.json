{
  "name": "react-authentication-app",
  "version": "1.0.0",
  "description": "an authentication using React and NodeJS",
  "main": "index.js",
  "scripts": {
    "client": "cd client && yarn",
    "server": "cd server && yarn",
    "dev:client": "cd client && yarn && npm run dev",
    "dev:server": "cd server && yarn && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "heroku-prebuild": "npm run client && npm run server",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ceafive/devchallenges.io.git"
  },
