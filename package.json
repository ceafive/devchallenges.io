{
  "name": "react-authentication-app",
  "version": "1.0.0",
  "description": "an authentication using React and NodeJS",
  "main": "index.js",
  "scripts": {
    "dev:client": "webpack serve --mode development --env development --config webpack.dev.config.js --hot",
    "dev:server": "DEBUG=authentication-app:* nodemon ./bin/www -e js",
    "dev": "concurrently \"npm dev:server\" \"npm dev:client\"",
    "client": "cd client && npm install",
    "server": "cd server && npm install --only=dev --no-shrinkwrap && npm start",
    "build": "cd client && webpack --mode production --config webpack.prod.config.js --progress --hide-modules",
    "start": "cross-env NODE_ENV=production cd server && node node ./bin/www",
    "heroku-postbuild": "npm run server && npm run client && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ceafive/devchallenges.io.git"
  },
  "keywords": [],
  "author": "Castro Agbo <ceafive@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ceafive/devchallenges.io/issues"
  },
  "homepage": "https://github.com/ceafive/devchallenges.io#readme",
  "dependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3"
  }
}
